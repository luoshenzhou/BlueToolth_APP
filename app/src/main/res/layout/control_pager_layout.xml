<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.viewpagerindicator.TabPageIndicator
            android:background="@color/radio_bt_bg"
            android:theme="@style/StyledIndicators1"
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
    </LinearLayout>
<RelativeLayout
    android:background="@color/toolsbar_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/toolsbar_bg_text"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONMON"
        />
</RelativeLayout>
    <com.haozhi.machinestatu.fengjisystem.view.TopNewsViewPager
        android:id="@+id/vp_menu_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>